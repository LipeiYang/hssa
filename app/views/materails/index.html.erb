<h1>Listing materails</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Seq</th>
    <th>Visible</th>
  </tr>

<% @materails.each do |materail| %>
  <tr>
    <td><%=h materail.name %></td>
    <td><%=h materail.seq %></td>
    <td><%=h materail.visible %></td>
    <td><%= link_to 'Show', materail %></td>
    <td><%= link_to 'Edit', edit_materail_path(materail) %></td>
    <td><%= link_to 'Destroy', materail, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New materail', new_materail_path %>